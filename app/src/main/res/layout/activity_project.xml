<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryText"
    tools:context=".ActivityHandler">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/blocksRV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonDefinedVar"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange"
                    android:insetLeft="5dp"
                    android:insetRight="2.5dp"
                    android:insetBottom="8dp"
                    android:text="@string/def_var"
                    android:textColor="#0097A7" />

                <Button
                    android:id="@+id/buttonUndefinedVar"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:insetLeft="5dp"
                    android:insetRight="2.5dp"
                    android:insetBottom="8dp"
                    android:text="@string/buttonundefinedvar"
                    android:textColor="#0097A7" />

                <Button
                    android:id="@+id/buttonAssignment"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorAccent"
                    android:insetLeft="5dp"
                    android:insetRight="2.5dp"
                    android:insetBottom="8dp"
                    android:text="@string/buttonassignment"
                    android:textColor="#0097A7" />

                <Button
                    android:id="@+id/buttonDefinedArray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkBlue"
                    android:insetLeft="5dp"
                    android:insetRight="2.5dp"
                    android:insetBottom="8dp"
                    android:text="@string/buttondefinedarray"
                    android:textColor="@color/black"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/buttonUndefinedArray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/green"
                    android:insetLeft="5dp"
                    android:insetRight="2.5dp"
                    android:insetBottom="8dp"
                    android:text="@string/buttonundefinedarray"
                    android:textColor="@color/black"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/buttonConditionIf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange"
                    android:insetLeft="5dp"
                    android:insetRight="2.5dp"
                    android:insetBottom="8dp"
                    android:text="@string/buttonconditionif"
                    android:textColor="@color/black"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/buttonConditionIfElse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple"
                    android:insetLeft="5dp"
                    android:insetRight="2.5dp"
                    android:insetBottom="8dp"
                    android:text="@string/buttonconditionifelse"
                    android:textColor="@color/black"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/buttonCycleWhile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:insetLeft="2.5dp"
                    android:insetRight="2.5dp"
                    android:insetBottom="8dp"
                    android:text="@string/buttoncyclewhile"
                    android:textColor="@color/black"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/buttonConsoleOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:insetLeft="2.5dp"
                    android:insetRight="2.5dp"
                    android:insetBottom="8dp"
                    android:text="@string/buttonconsoleoutput"
                    android:textColor="@color/black"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/buttonConsoleInputOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/material_dynamic_neutral_variant30"
                    android:insetLeft="2.5dp"
                    android:insetRight="2.5dp"
                    android:insetBottom="8dp"
                    android:text="@string/buttonconsoleinputone"
                    android:textColor="@color/black"
                    android:visibility="visible"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/consoleBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/holo_blue_bright"
        android:orientation="vertical"
        tools:ignore="VisualLintBounds">

        <TextView
            android:id="@+id/textConsole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textconsole"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messageRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>